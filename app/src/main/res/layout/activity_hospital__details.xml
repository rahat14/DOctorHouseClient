<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".Hospital_Details">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cumilla Hospital"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:fontFamily="@font/monbold"
        android:textColor="#fff"
        android:textSize="25sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kandirpaar , 1200"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/monregular"
        android:textColor="#fff"
        android:textSize="16sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="20dp"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#E3F5F8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Doctor Category"
            android:layout_gravity="center"
            android:fontFamily="@font/monbold"
            android:textColor="#00BCD4"
            android:textSize="25sp"
            />

    </androidx.cardview.widget.CardView>


</LinearLayout>